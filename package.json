{
  "name": "@racoondevs/amor-ui",
  "version": "0.0.1",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/styles.css",
    "./tailwind-preset": "./tailwind-preset.cjs"
  },
  "files": [
    "dist",
    "tailwind-preset.cjs",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "dist/styles.css"
  ],
  "peerDependencies": {
    "lucide-react": ">=0.4",
    "motion": ">=12.0.0",
    "react": ">=18",
    "react-dom": ">=18",
    "react-responsive": ">=10",
    "tailwindcss": ">=4.0.0"
  },
  "devDependencies": {
    "@types/react": "^18 || ^19",
    "@types/react-dom": "^18 || ^19",
    "concurrently": "^9.2.1",
    "lucide-react": "^0.542.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-responsive": "^10.0.1",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.12",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build:types": "tsup",
    "build:css": "tailwindcss -i src/styles/index.css -o dist/styles.css --minify",
    "build": "npm run clean && npm run build:types && npm run build:css",
    "dev:types": "tsup --watch",
    "dev:css": "tailwindcss -i src/styles/index.css -o dist/styles.css --watch",
    "dev": "concurrently \"npm:dev:*\""
  }
}
